sudo apt-get -y install apache2
sudo apt-get -y install mysql-server
# password
sudo apt-get -y install libapache2-mod-php
sudo /etc/init.d/apache2 restart
sudo touch /var/www/html/phptest.php
sudo echo "<?php phpinfo(); ?>" > /var/www/html/phptest.php

# everything in /var/www/html/ is seen at http://localhost
# http://localhost/phptest.php will show your php settings and location of php.ini
